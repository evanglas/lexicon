{
  "manifest_version": 3,
  "name": "lexicon",
  "description": "Tool to help build one's vocabulary while browsing",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "dashboard.html",
    "default_icon": "logo_16.png"
  }
}
